<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/it"
    tools:context=".ajouterlivreadmain">

    <ImageView
        android:id="@+id/select_IMG"
        android:layout_width="230dp"
        android:layout_height="140dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/ic_monochrome_photos_black_24dp"
        tools:ignore="VectorDrawableCompat" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/select_IMG"
        android:layout_marginTop="27dp"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_below="@id/select_IMG"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="le nom livre:"
                    android:textColor="@color/list_product_name"
                    android:textSize="20dp"

                    />

                <EditText
                    android:id="@+id/nom_livre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="important" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="Prix livre :   "
                    android:textColor="@color/list_product_name"
                    android:textSize="20dp"

                    />

                <EditText
                    android:id="@+id/prix"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="en dh maroc " />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="CatÃ©gorie   :      "
                    android:textColor="@color/list_product_name"
                    android:textSize="20dp"

                    />

                <EditText
                    android:id="@+id/categorie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="important" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="description   :  "
                    android:textColor="@color/list_product_name"
                    android:textSize="20dp"

                    />

                <EditText
                    android:id="@+id/discription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:hint="important" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp">

                <TextView
                    android:layout_width="151dp"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text=" image   :   "
                    android:textColor="@color/list_product_name"
                    android:textSize="20dp"

                    />

                <Button
                    android:id="@+id/bnimg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input"
                    android:text="selectioner une image " />
            </LinearLayout>

            <Button
                android:id="@+id/ajoute_livre"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/input"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="ajouter livre" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>